rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /links/{code} {
      // Code must be 7 alphanumeric chars (client generates it)
      allow create: if code.matches('^[a-z0-9]{7}$')
        && request.resource.data.keys().hasOnly(['name', 'status'])
        && request.resource.data.name is string
        && request.resource.data.status == 'not responded';
      allow read: if true;
      allow update: if request.resource.data.status in ['yes', 'no']
        && request.resource.data.name == resource.data.name;
      allow delete: if false;
    }
  }
}

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /links/{code} {
      // Code must be 7 alphanumeric chars (client generates it). createdAt/updatedAt stored server-side.
      allow create: if code.matches('^[a-z0-9]{7}$')
        && request.resource.data.keys().hasOnly(['name', 'status', 'createdAt', 'updatedAt'])
        && request.resource.data.name is string
        && request.resource.data.status == 'not responded'
        && request.resource.data.createdAt is timestamp
        && request.resource.data.updatedAt is timestamp;
      allow read: if true;
      allow update: if request.resource.data.status in ['yes', 'no']
        && request.resource.data.name == resource.data.name
        && request.resource.data.keys().hasOnly(['name', 'status', 'updatedAt'])
        && request.resource.data.updatedAt is timestamp;
      allow delete: if false;
    }
  }
}
